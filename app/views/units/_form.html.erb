<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-primary">
       <div class="panel-heading">
        <% if @unit.new_record? %>
          <h3>Mértékegység létrehozása</h3>
        <% else %>
          <h3>Mértékegység szerkesztése</h3>
        <% end %>
      </div>
      <div class="panel-body">
        <%= form_for(@unit) do |f| %>
          <% if @unit.errors.any? %>
            <div id="error_explanation">
              <h2><%= @unit.errors.count %> hibát kérem javítson ki:</h2>

              <ul>
              <% @unit.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <div class="field">
            <%= f.label :name, "A mértékegység neve" %>  
            <%= f.text_field :name, :autofocus => true, class: 'form-control' %>
          </div>
          <div class="form-group">
          </div>
          <% if @unit.new_record? %>
            <%= f.submit "Mértékegység létrehozása", class: 'btn btn-primary btn-lg btn-block' %>
          <% else %>
            <%= f.submit "Mértékegység frissítése", class: 'btn btn-primary btn-lg btn-block' %>
          <% end %>
        <% end %>
      </div> <!--panel-body -->
    </div> <!--panel-primary -->
  </div> <!--col-md4 -->
</div> <!--row -->