<% provide(:oldal_cim, 'AK-Bejelentkezés') %>
<div class="row">
  <div class="col-md-4 col-md-offset-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <h3>Bejelentkezés</h3>
      </div>

      <div class="panel-body">
        <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
          <div class="form-group">
            <%= f.label :email, "A felhasználó email címe" %>  
            <%= f.email_field :email, :autofocus => true, class: 'form-control' %>
          </div>
          <div class="form-group">
            <%= f.label :password, "Jelszó" %> 
            <%= f.password_field :password, class: 'form-control' %>
          </div>
          <% if devise_mapping.rememberable? -%>
            <div><%= f.check_box :remember_me %> <%= f.label :remember_me, "Maradjon bejelentkezve" %></div>
          <% end -%>
          <%= submit_tag "Bejelentkezés", class: 'btn btn-primary btn-lg btn-block' %>
        <% end %>
      </div> <!--panel-body -->
    </div> <!--panel-primary -->
  </div> <!--col-md4 -->
</div> <!--row -->